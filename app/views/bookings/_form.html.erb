<%= form_for @booking do |f| %>
  <div class='row'>
    <div class='col-lg-6'>
      <div class='form-group'>
        <%= f.label :first_name, t(:first_name) %>
        <%= f.label :last_name, t(:last_name) %>

        <div class="input-group">
          <span class="input-group-addon" id="sizing-addon2">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          </span>
          <%= f.text_field :first_name, placeholder: t(:first_name),
                                        class: 'form-control',
                                        required: true %>

          <%= f.text_field :last_name, placeholder: t(:last_name),
                                       class: 'form-control',
                                       required: true %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :phone, t(:phone) %>

        <div class='input-group'>
          <span class="input-group-addon" id="sizing-addon2">
            <span class="glyphicon glyphicon-phone" aria-hidden="true"></span>
          </span>
          <%= f.text_field :phone, placeholder: t(:phone),
                                   class: 'form-control',
                                   required: true %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :offer, t(:offer) %>

        <div class='input-group'>
          <span class="input-group-addon" id="sizing-addon2">
            <span class="glyphicon glyphicon-phone" aria-hidden="true"></span>
          </span>

          <%= f.select(
                :offer_ids,
                Offer.all.map { |offer| [offer.to_s, offer.id] },
                { placeholder: t(:offer), prompt: true },
                { class: 'form-control', multiple: true }) %>

        </div>
      </div>
    </div>

    <div class='col-lg-6'>
      <div class='form-group'>
        <%= f.label :reserved_at, t(:date_and_time_of_reservation) %>

        <div class="input-group">
          <span class="input-group-addon" id="sizing-addon2">
            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
          </span>

          <%= reserved_at_dropdown(f) %>
        </div>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-lg-12'>
      <div class='form-group'>
        <%= f.label :additional_info, t(:additional_info) %>
        <div class='input-group'>
          <span class="input-group-addon" id="sizing-addon2">
            <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
          </span>
          <%= f.text_area :additional_info, placeholder: t(:additional_info),
                                            class: 'form-control' %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.submit class: 'btn btn-warning btn-lg' %>
      </div>
    </div>
  </div>
<% end %>
