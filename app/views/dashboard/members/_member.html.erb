<div class='row'>
  <div class='column large-6 small-5'>
    <div class="thumbnail">
      <%= image_tag(member.avatar(:thumb)) %>
    </div>


    <h4><%= member.full_name %></h4>
    <h5><%= member.profession %></h5>
    <h5><%= member.phone_number %></h5>

    <p><b>Създадено на:</b> <%= member.created_at.to_formatted_s(:long_ordinal) %></p>
    <p><b>Обновено на:</b> <%= member.updated_at.to_formatted_s(:long_ordinal) %></p>

    <%= link_to "Редактирай", edit_dashboard_member_path(member), class: 'success button' %>

    <%= link_to "Премахни", dashboard_member_path(member),
          method: :delete,
          data: { confirm: 'Are you sure?' },
          class: 'alert button' %>

  </div>

  <div class='column large-6 small-7'>
    <%= member.description %><hr>
  </div>

</div>
